<div class="container">
  <h2>Languages</h2>

  {{#if data.length}}
    <table class="table">
      <thead>
      <tr>
        <th>#</th>
        <th>Icon</th>
        <th>Code</th>
        <th class="text-end">Actions</th>
      </tr>
      </thead>

      <tbody>
      {{#each data}}
        <tr>
          <td>{{@index}}</td>
          <td>{{this.iconSrc}}</td>
          <td>{{this.code}}</td>
          <td class="text-end">
            <a href="/admin/languages/{{this.id}}" class="btn btn-primary"><i class="fas fa-edit"></i> Edit</a>
            <button type="button" data-id="{{this.id}}" class="btn btn-danger delete-btn"><i class="fas fa-trash"></i> Delete</button>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  {{/if}}

  <p class="not-available">No available languages.</p>

  <a href="/admin/languages/create" id="createLanguageBtn" class="btn btn-success float-end">Create New Language</a>
</div>

<style>
  table + .not-available {
    display: none
  }
</style>
<script src="/languages/index.js"></script>